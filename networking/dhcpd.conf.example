# dhcpd.conf
default-lease-time 600;
max-lease-time 7200;
ddns-update-style none;
ignore client-updates;
authoritative;
subnet 198.168.10.0 netmask 255.255.255.0 {
  option routers 198.168.10.1;
  option subnet-mask 255.255.255.0;
  option domain-name "home.lan";
  option domain-name-servers 198.168.10.1;
  range 198.168.10.100 198.168.10.200;
  default-lease-time 21600;
  max-lease-time 43200;
}
